@page "/Edit/{Id}"


@using Order.Management.WebApp.Data
@inject ISupplierService SupplierService

@inject NavigationManager NavigationManager

<h2>Edit Supplier</h2>
<hr />

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <input form="Name" class="form-control" @bind="@obj.Supplierid" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input form="Name" class="form-control" @bind="@obj.Name" />
            </div>
            <!--<div class="form-group">
                <label for="Gender" class="control-label"></label>
                <select @bind="@obj.State" class="form-control">
                    <option value="">-Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
            </div>-->
            <div class="form-group">
                <label for="Designation" class="control-label">Designation</label>
                <input form="Designation" class="form-control" @bind="@obj.AddressLine1" />
            </div>
            <div class="form-group">
                <label for="City" class="control-label">City</label>
                <input form="City" class="form-control" @bind="@obj.City" />
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@UpdateSupplier" value="Update" />
                <input type="button" class="btn btn-primary" @onclick="@Cancel" value="Cancel" />
            </div>
        </div>
    </div>
</form>

@code {
    [Parameter]
    public string Id { get; set; }
    Supplier obj = new Supplier();
    protected override async Task OnInitializedAsync()
    {
        obj = await Task.Run(() => SupplierService.GetSupplierAsync(Convert.ToInt32(Id)));
    }
    protected async void UpdateSupplier()
    {
        await SupplierService.UpdateSupplierAsync(obj);
        NavigationManager.NavigateTo("Suppliers");
    }
    void Cancel()
    {
        NavigationManager.NavigateTo("Suppliers");
    }
}